---
import { Icon } from "astro-icon";
const { title, content, icon } = Astro.props;
---

<div
  class="flex flex-col gap-4 items-center max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100"
>
  <div
    class="bg-secondary-blue-dark rounded-full p-8 -mt-16 hover:bg-secondary-blue-pale hover:scale-110 transition duration-500"
  >
    <Icon class="w-20" name={icon} />
  </div>
  <h5
    class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
  >
    {title}
  </h5>
  <p class="font-normal text-gray-700 dark:text-gray-400">
    {content}
  </p>
</div>

<style></style>
