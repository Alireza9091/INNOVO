---
const year = new Date().getFullYear();
import logo from "/InnovateLogoWhite.png";
import medtech_logo from "/Medtech-logo.png";
import h2i_logo from "/H2i-logo.png";
import ContactInfo from "@/components/ContactInfo.astro";
---

<footer class="w-full px-6 bg-gray-800 text-gray-50">
  <div
    class="w-full mx-auto max-w-screen-xl py-16 md:flex md:items-center md:justify-between"
  >
    <div class="flex flex-col gap-2">
      <a href="/" class="flex items-center mb-8">
        <img class="w-44" src={logo} alt="logo of Innovo" />
      </a>
      <h2 class="font-bold text-xl py-4">Proudly partnered with:</h2>
      <a
        href="https://medtechcanada.org/"
        target="_blank"
        class="flex items-center"
      >
        <img class="w-44" src={medtech_logo} alt="logo of Innovo" />
      </a>
      <a
        href="https://h2i.utoronto.ca/"
        target="_blank"
        class="flex items-center bg-white"
      >
        <img class="w-44" src={h2i_logo} alt="logo of Innovo" />
      </a>
    </div>

    <div class="flex flex-col gap-4 md:gap-8">
      <ContactInfo />
      <span class="text-sm text-gray-200 sm:text-center"
        >&copy; {year}
        <a href="/" class="hover:underline">Innovo</a>. All Rights Reserved.
      </span>
    </div>
    <ul
      class="flex flex-wrap items-center mt-3 text-sm font-medium text-gray-200 sm:mt-0"
    >
      <li>
        <a href="/about" class="mr-4 hover:underline md:mr-6">About</a>
      </li>
      <!-- <li>
        <a href="#" class="mr-4 hover:underline md:mr-6">Privacy Policy</a>
      </li>
      <li>
        <a href="#" class="mr-4 hover:underline md:mr-6">Licensing</a>
      </li> -->
      <li>
        <a href="/contact" class="hover:underline">Contact</a>
      </li>
    </ul>
  </div>
</footer>
