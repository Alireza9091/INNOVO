---
import { Icon } from 'astro-icon'
const {title, content, link, iconName} = Astro.props;
---
<a target="_blank" href={link} class=" px-8 py-6 rounded-md h-42 max-w-sm bg-gradient-to-br to-secondary-blue-md from-primary-1">
    <Icon class="text-sky-50 hover:text-sky-300 w-10 mb-6" name={iconName}/>
    <h3 class=" mb-4 text-white font-semibold text-lg md:text-xl lg:text-2xl">{title}</h3>
    <p class=" text-white">{content}</p>
</div>